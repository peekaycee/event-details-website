@page
@model soft20181_starter.Pages.EditEventModel
@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="theEvent.Name"></label>
        <input asp-for="theEvent.Name" class="form-control" />
        <span asp-validation-for="theEvent.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="theEvent.Description"></label>
        <textarea asp-for="theEvent.Description" class="form-control"></textarea>
        <span asp-validation-for="theEvent.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="theEvent.Location"></label>
        <input asp-for="theEvent.Location" class="form-control" />
        <span asp-validation-for="theEvent.Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="theEvent.EventDateTime"></label>
        <input asp-for="theEvent.EventDateTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="theEvent.EventDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="theEvent.CoverPhoto"></label>
        <input asp-for="theEvent.CoverPhoto" class="form-control" />
        <span asp-validation-for="theEvent.CoverPhoto" class="text-danger"></span>
    </div>
    

    <!-- ID hidden field (primary key for EF) -->
    <input asp-for="theEvent.Id" type="hidden" />

    <button type="submit" class="btn btn-primary">Update</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}