        <!-- Featured Events -->        
        <section class="featured-events">
          <h2>Upcoming Events</h2>
          <div class="events">
            <button type="button" class="view-all-btn hidden">View all</button>
          </div>
          <a href="events.html" class="view-all">View all</a>
        </section>

        <!-- Call to Action -->
         <section class="cta-container">
          <div class="cta">
            <div class="cta-text">
              <h2>Visit.</h2>
