@page
@model soft20181_starter.Pages.ContactModel
@{
}

<div class="contact-form">
    <h2 class="header">Leave a Message</h2>

    <div class="success">Thank you <span>#Name</span>. We will be in touch shortly</div>

    <div>
        <form method="post">

            <div class="form-element">
                <input asp-for="@Model.ContactForm.Email" type="text" placeholder="Email" />
                <span asp-validation-for="@Model.ContactForm.Email"></span>
            </div>

            <div class="form-element">
                <input asp-for="@Model.ContactForm.Name" type="text" placeholder="Name" />
                <span asp-validation-for="@Model.ContactForm    .Name"></span>
            </div>

            <div class="form-element">
                <input asp-for="@Model.ContactForm.PhoneNumber" type="text" placeholder="Phone" />
                <span asp-validation-for="@Model.ContactForm.PhoneNumber"></span>
            </div>

            <div class="form-element">
                <textarea asp-for="@Model.ContactForm.Message" placeholder="Message"></textarea>
                <span asp-validation-for="@Model.ContactForm.Message"></span>
            </div>

            
            <button type="submit">Submit</button>
        </form>
    </div>
</div>
<main class="contact-page">
    <section class="search-and-filter">
        <!-- Search Bar -->
        <div class="search-box">
            <div class="search-bar">
                <label for="searchInput"></label>
                <input type="text" name="searchInput" id="searchInput" placeholder="Search for events" title="Search events by title or location">
            </div>
            <div class="search-image">
                <img src="/assets/images/search-icon.png" loading="lazy" alt="Search Icon">
            </div>
        </div>

        <!-- Dropdown for fee range filter -->
        <div class="filter">
            <span>Filter by ticket fee </span>
            <select title="Filter" id="feeFilter" placeholder="filter">
                <option value="all">All Fees</option>
                <option value="below-50">Below $50</option>
                <option value="50-100">$50 - $100</option>
                <option value="100-150">$100 - $150</option>
                <option value="150-200">$150 - $200</option>
                <option value="above-200">Above $200</option>
            </select>
        </div>
    </section>
    <div class="contact-container">
        <div class="illustration">
            <img src="./assets/images/rb_2148893295.png" loading="lazy" alt="Illustration">
        </div>
        <div class="form">
            <form id="contact-form">
                <h2>Contact Us</h2>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" autocomplete="given-name" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" autocomplete="off" required>

                <label for="contact">Mobile:</label>
                <input type="number" id="contact" name="contact" autocomplete="off" >

                <label for="message">Message:</label>
                <textarea id="message" name="message" cols="30" rows="5" required></textarea>

                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
    <!-- Hidden Events -->
    <div class="events hidden"></div>
</main>


