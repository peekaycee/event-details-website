@page
@model soft20181_starter.Pages.Post

@{
    Layout = null;
}

<!-- Event Input Form -->
    <form id="crudForm">
      <h3>Add New Event</h3>
      <img src="/assets/images/cross.png" loading="lazy" alt="cross" id="cross">
      <input type="text" name="imageUrl" id="imageUrl" placeholder="Enter Image Url" required/>
      <input type="text" name="videoUrl" id="videoUrl" placeholder="Enter Video Url" required/>
      <input type="text" name="title" id="title" placeholder="Enter Title" required/>
      <input type="text" name="description" id="description" placeholder="Enter Description" required/>
      <input type="text" name="location" id="location" placeholder="Enter Location" required/>
      <input type="date" name="date" id="date" placeholder="Enter Date" required/>
      <input type="number" name="fee" id="fee" placeholder="Enter Ticket Fee" required/>
      <button type="submit" onclick="closeForm()">Add Event</button>
    </form>

    <!-- Posting Table -->
    <main class="post-container">
      <section class="search-and-filter">
        <!-- Search Bar --> 
        <div class="search-box">
          <div class="search-bar">
            <label for="searchInput"></label>
            <input type="text" name="searchInput" id="searchInput" placeholder="Search for events" title="Search events by title or location">
          </div>
          <div class="search-image">
            <img src="/assets/images/search-icon.png" loading="lazy" alt="Search Icon">
          </div>
        </div>

         <!-- Dropdown for fee range filter -->
        <div class="filter">
          <span>Filter by ticket fee </span>
          <select title="Filter" id="feeFilter" placeholder="filter">
            <option value="all">All Fees</option>
            <option value="below-50">Below 50</option>
            <option value="50-100">$50 - $100</option>
            <option value="100-150">$100 - $150</option>
            <option value="150-200">$150 - $200</option>
            <option value="above-200">Above $200</option>
          </select>
        </div>
      </section>
      <button type="button" onclick="openForm()" class="add-event-btn">Add New Event</button>  
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Video</th>
            <th>Title</th>
            <th>Description</th>
            <th>Location</th>
            <th>Date</th>
            <th>Ticket Fee (&pound;)</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="dataContainer"></tbody>
      </table>
      <!-- Hidden Events -->
      <div class="events hidden"></div>
    </main>